<!DOCTYPE html>
<html>
<head>
  <title>
    <% if content_for?(:title) %>
      <%= yield(:title) %>
    <% else %>
      CheapCoffee.gr | Cheap, near, quick
    <% end %>
  </title>
  <% if content_for?(:meta_tags) %>
    <%= yield(:meta_tags) %>
  <% end %>
  <%= stylesheet_link_tag "reset", "960" %>
  <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" media="screen"  charset="utf-8">
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <%= javascript_include_tag "jquery.min", "rails", "jquery.json", "jquery.autocomplete.pack", "handlebars", "application" %>
  <%= csrf_meta_tag %>
  <% if content_for?(:js) %>
    <%= yield(:js) %>
  <% end %>
</head>


<body>
  <div id="universe">
  	<div class="container_12" id="world">
  		<div id="header" class="grid_12">
  			<h1><a href="/">Cheapcoffee.gr | Cheap, near, quick</a></h1>
  			<div class="connect">
  			  <% if user_signed_in? %>
      	    Hello <%= current_user.email %>
      	    <%= link_to "Sign out", destroy_user_session_path %>
      	  <% else %>
  			    <%= link_to image_tag("fblogin.png"), user_oauth_authorize_url(:facebook), :class => "fb-connect" %>
      	  <% end %>
  			</div>
  		</div><!-- end header -->

      <div id="main" class="grid_12">
        <%= yield %>
      </div>
      
  		<div id="footer" class="grid_12">
  		  <%= link_to "About / Team", about_path %>
  			&middot;
  			<%= link_to "FAQ", faq_path %>
  			&middot;
  			<%= link_to "Contact", contact_path %>
  		</div><!-- end footer -->
  	</div><!-- end container  world-->
	</div><!-- end universe -->  

	
	<%= render :partial => 'shared/google_analytics' %>
</body>
</html>

