<!DOCTYPE html>
<html>
<head>
  <title>
    <% if content_for?(:title) %>
      <%= yield(:title) %>
    <% else %>
      CheapCoffee.gr | Cheap, near, quick
    <% end %>
  </title>
  <% if content_for?(:meta_tags) %>
    <%= yield(:meta_tags) %>
  <% end %>
  <%= stylesheet_link_tag "reset", "960" %>
  <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" media="screen"  charset="utf-8">
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <%= javascript_include_tag "jquery.min", "rails", "jquery.json", "jquery.autocomplete.pack", "handlebars", "application" %>
  <%= csrf_meta_tag %>
  <% if content_for?(:js) %>
    <%= yield(:js) %>
  <% end %>
</head>


<body>
	<div class="container_12">

		<div id="header">
			<h1><a href="/">Cheapcoffee.gr | Cheap, near, quick</a></h1>
			<div class="connect">
			  <% if user_signed_in? %>
    	    Hello <%= current_user.email %>
    	    <%= link_to "Sign out", destroy_user_session_path %>
    	  <% else %>
			    <%= link_to image_tag("fbConnect.jpg"), user_oauth_authorize_url(:facebook), :class => "fb-connect" %>
    	  <% end %>
			</div>
		</div>

    <div id="main">
      <%= yield %>
    </div>
		<div id="footer">
		  <%= link_to "About / Team", about_path %>
			&middot;
			<%= link_to "FAQ", faq_path %>
			&middot;
			<%= link_to "Contact", contact_path %>
		</div>

	</div><!-- end container -->
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-19225596-2']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</body>
</html>

